<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculadoraActivity">

  <Button
      android:id="@+id/btn_div"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="96dp"
      android:text="/"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/btn_mult"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/btn_sub"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="36dp"
      android:text="-"
      app:layout_constraintBottom_toTopOf="@+id/btn_mult"
      tools:layout_editor_absoluteX="245dp" />

  <TextView
      android:id="@+id/tv_dados_usuario"
      android:layout_width="219dp"
      android:layout_height="25dp"
      android:text="Calculadora"
      android:textAlignment="center"
      android:textSize="16sp"
      tools:layout_editor_absoluteX="96dp"
      tools:layout_editor_absoluteY="72dp" />

  <Button
      android:id="@+id/btn_sum"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="36dp"
      android:text="+"
      app:layout_constraintBottom_toTopOf="@+id/btn_div"
      tools:layout_editor_absoluteX="78dp" />

  <Button
      android:id="@+id/btn_mult"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="96dp"
      android:text="*"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toEndOf="@+id/btn_div" />

  <Button
      android:id="@+id/btn_return_to_counter"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Voltar"
      tools:layout_editor_absoluteX="8dp"
      tools:layout_editor_absoluteY="16dp" />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="214dp"
      android:layout_height="30dp"
      android:text="Canivete do Carioca"
      android:textAlignment="center"
      android:textSize="18sp"
      android:textStyle="bold"
      tools:layout_editor_absoluteX="100dp"
      tools:layout_editor_absoluteY="16dp" />

  <EditText
      android:id="@+id/editTextNumber"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="Insira o primeiro número"
      android:inputType="number"
      tools:layout_editor_absoluteX="100dp"
      tools:layout_editor_absoluteY="161dp" />

  <EditText
      android:id="@+id/editTextNumber2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="Insira o segundo número"
      android:inputType="number"
      tools:layout_editor_absoluteX="100dp"
      tools:layout_editor_absoluteY="234dp" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Resultado da operação"
      android:textStyle="bold"
      tools:layout_editor_absoluteX="132dp"
      tools:layout_editor_absoluteY="295dp" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="resultado"
      tools:layout_editor_absoluteX="176dp"
      tools:layout_editor_absoluteY="343dp" />
</androidx.constraintlayout.widget.ConstraintLayout>