<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculadoraActivity"
    android:background="@drawable/christ_the_redeemer">

  <TextView
      android:id="@+id/tv_titulo_calculadora"
      android:layout_width="219dp"
      android:layout_height="25dp"
      android:layout_marginTop="4dp"
      android:background="#80000000"
      android:text="Calculadora"
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btn_mult"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="56dp"
      android:text="*"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.233"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/btn_div"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="56dp"
      android:text="/"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.062"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/btn_sub"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="12dp"
      android:text="-"
      app:layout_constraintBottom_toTopOf="@+id/btn_mult"
      app:layout_constraintEnd_toEndOf="@+id/btn_mult" />

  <Button
      android:id="@+id/btn_sum"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="12dp"
      android:text="+"
      app:layout_constraintBottom_toTopOf="@+id/btn_div"
      app:layout_constraintStart_toStartOf="@+id/btn_div" />

  <Button
      android:id="@+id/btn_return_to_main"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:text="Voltar"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/et_primeiro_numero"
      android:layout_width="wrap_content"
      android:layout_height="48dp"
      android:layout_marginTop="116dp"
      android:background="#80000000"
      android:ems="10"
      android:hint="Insira o primeiro número"
      android:inputType="number|numberDecimal|numberSigned"
      android:textColor="@color/white"
      android:textColorHint="#6DFFFFFF"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.25"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/et_segundo_numero"
      android:layout_width="wrap_content"
      android:layout_height="48dp"
      android:layout_marginTop="116dp"
      android:background="#80000000"
      android:ems="10"
      android:hint="Insira o segundo número"
      android:inputType="number|numberDecimal|numberSigned"
      android:textColor="@color/white"
      android:textColorHint="#6DFFFFFF"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.75"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/tv_label_resultado"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="36dp"
      android:background="#80000000"
      android:text="Resultado da operação"
      android:textColor="@color/white"
      android:textSize="16sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.75"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/et_segundo_numero" />

  <TextView
      android:id="@+id/tv_resultado"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="56dp"
      android:background="#80000000"
      android:text="resultado"
      android:textColor="@color/white"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="@+id/tv_label_resultado"
      app:layout_constraintStart_toStartOf="@+id/tv_label_resultado"
      app:layout_constraintTop_toBottomOf="@+id/tv_label_resultado" />
</androidx.constraintlayout.widget.ConstraintLayout>